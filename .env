# ==============================================
# 🛡️ PerMonitorH 配置
# ==============================================

# [目标网站]
SITE_URL=https://cloud.zrvvv.com/cart
SITE_NAME=CloudProvider
LOGIN_REQUIRED=false
LOGIN_URL=
SITE_USER=
SITE_PASS=

# [通知策略]
# 补货通知开关 (true/false): 设为 false 则有货时不发 TG/邮件，仅 Web 报警
RESTOCK_NOTIFY=true

# 每日简报时间 (0-23): 填 -1 关闭简报
DAILY_REPORT_TIME=11

# 补货通知循环间隔 (毫秒): 默认 10分钟
NOTIFY_GAP=600000

# 启动测试消息 (true/false)
SEND_TEST=true

# [系统运行]
# 检查间隔 (毫秒): 默认 40秒
CHECK_INTERVAL=40000
PORT=3000
TZ=Asia/Shanghai

# [SMTP 邮件]
SMTP_ENABLED=true
SMTP_HOST=smtp.qq.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@qq.com
SMTP_PASS=your_auth_code
SMTP_RECEIVER=receiver@example.com

# [Telegram]
TG_ENABLED=true
TG_BOT_TOKEN=123456:ABC...
TG_CHAT_ID=123456789
